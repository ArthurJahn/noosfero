<script src="/plugins/mezuro/javascripts/validations.js" type="text/javascript"></script>

<h2><%= @project_content.name %> Project</h2>

<% form_for :repository, :url => {:action =>"create_repository", :controller => "mezuro_plugin_repository"},  :method => :get do |f| %>
  <%= hidden_field_tag :id, @configuration_content.id %>
  
  <p>
    <%= f.label :name, "Name:" %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :type, "Type:" %>
    <%= f.select :type, [["GIT","GIT"], ["SVN", "SVN"]] %>
  </p>

  <p>
    <%= f.submit "Add" %>
  </p>

<% end %>

