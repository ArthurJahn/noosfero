<%= hidden_field_tag :id, id %>
<%= hidden_field_tag :metric_name, metric_name %>
<table>
  <tr>
    <td>
      <%= f.label :label, "(*) Label:" %>
    </td>
    <td>
      <%= f.text_field :label %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :beginning, "(*) Beginning:" %>
    </td>
    <td>
      <% if @range.beginning.to_s == "-Infinity" %>
        <%= f.text_field :beginning, :value => "-INF" %>
      <% else %>
        <%= f.text_field :beginning %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :end, "(*) End:" %>
    </td>
    <td>
      <% if @range.end.to_s == "Infinity" %>
        <%= f.text_field :end, :value => "INF" %>
      <% else %>
        <%= f.text_field :end %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :grade, "(*) Grade:" %>
    </td>
    <td>
      <%= f.text_field :grade %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :color, "(*) Color:" %>
    </td>
    <td>
      <%= f.text_field :color %>
    </td>
  </tr>
  <tr>
    <td>
      <%= f.label :comments, "Comments:" %>
    </td>
    <td>
      <%= f.text_field :comments %>
    </td>
  </tr>
</table>
<%= f.submit "Save Range" %>
