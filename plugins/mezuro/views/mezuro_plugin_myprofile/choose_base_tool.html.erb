<h2><%= @configuration_name%> Configuration</h2>

<%= link_to "* New Compound Metric *", :controller => "mezuro_plugin_myprofile", :action => "new_compound_metric", :params =>
{:configuration_name => @configuration_name} %>

<h5>Base Tools:</h5>
<table id="project_info">
  <% @tool_names.base_tool_names.each do |collector_name| %>
    <tr>
      <td>
        <%= link_to collector_name, :controller => "mezuro_plugin_myprofile", :action => "choose_metric", :params =>
        {:configuration_name => @configuration_name, :collector_name => collector_name} %>
      </td>
    </tr>
  <% end %>
</table>
