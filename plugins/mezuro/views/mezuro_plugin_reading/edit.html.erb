<script src="/javascripts/colorpicker.js" type="text/javascript"></script>
<script src="/javascripts/colorpicker-noosfero.js" type="text/javascript"></script>
<h3> <%= link_to( @reading_group_name, homepage_url(@data_profile, @reading_group_name.downcase.gsub(/[^0-9A-Za-z\-]/, '')) ) %></h3>

<% form_for :reading, :url => {:action =>"create", :controller => "mezuro_plugin_reading"},  :method => :get do |f| %>
  <%= hidden_field_tag :id, @reading_group_content_id %>
  
  <%= f.hidden_field :id %>
  <%= required labelled_form_field _('label:'), f.text_field(:label) %> 

  <%= required labelled_form_field _('grade:'),
  f.text_field(:grade) %>
  
  <%= required labelled_form_field _('color:'),
  colorpicker_field(:reading, :color) %>Click in the field to change Color
  
  <p>
    <%= f.submit "Add" %>
  </p>

<% end %>
