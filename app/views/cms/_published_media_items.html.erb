<div class='items'>
  <% file_types.each do |key, header| %>
    <% display = @recent_files[key].present? ? '' : 'none' %>
    <div class='<%= key.to_s %>' style='display: <%= display%>;'>
      <h3><%= header %></h3>
      <% @recent_files[key].each do |file| %>
        <% @file = file %>
        <%= render :partial => "cms/media_panel/#{key.to_s.singularize}" %>
      <% end %>
    </div>
  <% end %>
</div>
