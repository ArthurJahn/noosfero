<h2><%= _('Add product') %></h2>

<%= error_messages_for :consumption  %>

<% form_for :consumption, @consumption do |f|  %>
  <p> <%= _('Product:') %> <%= f.select "product_category_id", ProductCategory.find(:all).map{|pc| [pc.name, pc.id]} %></p>
  <p> <%= _('Aditional specifications:') %><br> <%= f.text_area "aditional_specifications" %> </p>
  <% button_bar do %>
    <%= submit_button('add', _('Add product'), :cancel => {:action => 'index'})  %>
  <% end %>
<% end %>
