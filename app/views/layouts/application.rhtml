<html>
  <head>
    <%= javascript_include_tag :defaults %>
    <%= design_all_header_tags %>
    <% if params[:controller] == 'comatose_admin' %>
      <%= stylesheet_link_tag 'comatose_admin' %>
      <%= javascript_include_tag 'comatose_admin' %>
    <% end %>

  </head>

  <body>
    <%= image_tag 'loading.gif', :id => 'spinner', :style => "display:none; float:right;" %>
    <div id="wrap">
      <div id="frame">

        <div id="menu">
          <%= _('Skip to:') %>
          <a href="#main_content"><%= _('Content') %></a> | 
          <a href="#sidebar"><%= _('Navigation') %></a> | 
          <a href="#footer"><%= _('Footer') %></a>
        </div>

        <div id="header">
          <%= header %>
        </div>

        <% unless flash[:notice].nil? %>
          <div id='notice'>
            <%= flash[:notice] %>
          </div>
        <% end %>

        <a name='main_content'/></a>
        <div id='content'>
          <%= design_display(yield) %>
        </div>

        <div id="footer">
          <a name='footer'/></a>
          <%= footer %>
          <%= design_display_icon('back', _('Back') , :action => 'list')%>
        </div>
      </div>
    </div>

  </body>

</html>
