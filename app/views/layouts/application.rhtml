<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

    <%= design_all_header_tags %>
    <%= stylesheet_link_tag 'common' %>
    <%= stylesheet_link_tag 'help' %>
    <%= stylesheet_link_tag 'menu' %>
    <%= javascript_include_tag 'menu' %>
    <%= javascript_include_tag 'search_box' %>
  </head>

  <body onload='javascript: focusOnFirstField();'>

    <% unless flash[:notice].nil? %>
      <div id='notice'>
        <%= flash[:notice] %>
        <%= javascript_tag(visual_effect(:fade, "notice", :duration => 2.0)) %>
      </div>
    <% end %>

    <%= image_tag 'loading.gif', :id => 'spinner', :style => "display:none; float:right;", :alt => _('Image for Loading...') %>

    <div id="wrap" class='category<%= category_color %>'>
      <div id='noosfero_bar' class='category<%= category_color %>'>
       <div id='top_bar' class='category<%= category_color %>'>
        <div id='accessibility_menu'>
	  <a href='#content' title='Ir para o conteúdo'>Ir para conteúdo</a>
	  <%= accessibility_link  %>
        </div><!-- accessibility_menu -->
	<div id='path_category'>
        <% if @category %>
            <%= @category.full_name %>
	<% else @category %>
        <div id='user_options'>
	  <%= user_options.join(' ') %>
	</div><!-- id='user_options' -->
        <% end %>
	</div>
       </div>
        <div id='search_box'>
	  <%= search_box %>
        </div><!-- id='search_box' -->

        <div id='navigation_bar' class='category<%= category_color %>'>
          <%= render :file => 'shared/categories_menu' %>
        </div><!-- id='navigation_bar' -->

        <script type="text/javascript">
          prepareMenu('navigation_bar', { timeout: 10 });
        </script>


      </div><!-- id="noosfero_bar" -->
    <div id='frame'><!-- Frame que envolve toda pagina de um usuario -->
     <div id='header'><!-- Abaixo um cabeçalho especifico para a pagina de usuario. -->
     </div><!-- id='header' -->
      <div id='content'>
        <!-- <a name='main_content'/></a> -->
        <!-- Aqui entra um conteudo tipo o titulo da pagina do usuário e os botoes do comatose? -->
        <div id='header_content'>
        </div>

        <% if params[:controller] == 'cms' %>
          <div id='boxes'><a name="content"> </a>
            <%= yield %>
          </div>
        <% else %>
          <%= design_display(yield) %>
        <% end %>
      </div><!-- id="content" -->
      <div id="footer_content"><!-- Rodape do onteudo -->
      </div><!-- id="footer_content" -->
   </div><!-- id="frame" -->
    </div><!-- id="wrap" -->

      <div id="footer">
        <!-- <a name='footer'/></a> -->
        <%= footer %>
      </div><!-- id="footer" -->

  </body>
</html>
