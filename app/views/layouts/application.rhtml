<html>
  <head>
    <%= javascript_include_tag :defaults %>
    <%= design_all_header_tags %>

  </head>

  <body>
    <%= image_tag 'loading.gif', :id => 'spinner', :style => "display:none; float:right;" %>
    <div id="wrap">
      <div id="frame">

        <div id="menu">
          <%= _('Skip to:') %>
          <a href="#main_content"><%= _('Content') %></a> | 
          <a href="#sidebar"><%= _('Navigation') %></a> | 
          <a href="#footer"><%= _('Footer') %></a>
        </div>

        <div id="header">
          <%= header %>
        </div>

        <div id='notice'>
          <%= flash[:notice] %>
        </div>
        <a name='main_content'/>
        <%= design_display(yield) %>

        <div id="footer">
          <a name='footer'/>
          <%= footer %>
          <%= design_display_icon('back')%>
        </div>
      </div>
    </div>

  </body>

</html>
