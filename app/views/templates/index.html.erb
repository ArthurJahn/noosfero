<h1><%= _('Edit Templates') %></h1>

<% list_of_templates = [[_('Person')    , Person.templates    , 'person'    ],
                        [_('Community') , Community.templates , 'community' ],
                        [_('Enterprise'), Enterprise.templates, 'enterprise']] %>

<ul>
  <% list_of_templates.each do |title, templates, kind|%>
    <li><%= title %></li>
    <ul>
      <% templates.each do |template| %>
        <li><%= link_to(template.name, {:controller => 'profile_editor', :profile => template.identifier}) %></li>
      <% end %>
      <li><strong>
        <%= link_to(_('New...'), {:action => "create_#{kind}_template"}) %>
      </strong></li>
    </ul>
  <% end %>
</ul>
