<h1><%= _('Login') %></h1>

<% labelled_form_for :user, @user do |f| %>

<%= display_form_field(_('Login'), text_field_tag(:login) ) %>

<%= display_form_field(_('Password'), password_field_tag(:password) ) %>

<%= display_submit_tag 'Log in' %>

<% end %>

<p>
<%= link_to _("I forgot my password!"), :action => 'forgot_password' %>
</p>

<p>
<%= link_to _("I want to be an user!"), :action => 'signup' %>
</p>
