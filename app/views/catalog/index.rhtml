<h1> <%= _('%s:Products/Services') % @profile.name %> </h1>

<table align='center'>
  <tr>
    <th colspan="2"><%= _('Product/Service') %></th>
    <th><%= _('Price') %></th>
  </tr>
<% @products.each do |p| %>
  <tr>
    <td> <%= image_tag p.image.public_filename if p.image %> </td>
    <td> <%= link_to p.name, :action => 'show', :id => p %> </td>
    <td> <%= p.price || content_tag('em', _('not informed'))  %> </th>
  </tr>
<% end %>
</table>
