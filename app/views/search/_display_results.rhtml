<% @results.each do |name,results| %>
  <% if !results.nil? and !results.empty? %>
    <div id="search-results-<%= name %>">
      <% if params[:action] != 'assets' %>
        <h3><%= @names[name] %></h3>
      <% end %>
      <ul>
      <% results.each do |hit| %>
        <%= render :partial => partial_for_class(hit.class), :object => hit %>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
