<h2> <%= _('Search results for "%s" ') % @query %> </h2>

<% @results.each do |hit| %>
  <%= render :partial => partial_for_hit(hit.class), :locals => { :hit => hit } %>
  <div class='search-relevance'>
    <%= _('Relevance: %d%%') % relevance_for(hit) %>
  </div>
  <br style='clear: left'/>
<% end %>
