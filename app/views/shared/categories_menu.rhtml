<ul>
  <% @environment.display_categories.each do |item| %>
    <li id='category<%= item.display_color %>'>
      <%= item.name %>
      <ul>
        <% item.children.each do |child| %>
          <li><%= link_to(content_tag('span', child.name), :controller => 'category', :path => child.path) %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
