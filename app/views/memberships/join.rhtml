<h1><%= _('Joining %s') % @to_join.name %></h1>

<p>
<%= _('Are you sure you want to join %s?') % @to_join.name %>
</p>

<% form_tag do %>
  <%= hidden_field_tag(:confirmation, 1) %>
  <%= submit_button(:ok, _("Yes, I want to join.") % @to_join.name) %>
  <%= button(:cancel, _("No, I don't want."), :action => 'index') %>
<% end %>
